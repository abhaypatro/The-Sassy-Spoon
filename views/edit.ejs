<%- include('partials/header'); %>
<div class="container text-center">
    <h2>Add new item</h2>
    <form action="/menu/<%=item.id%>/?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" placeholder="add name" name="item[name]" value="<%=item.name%>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" placeholder="add image url" 
           name="item[image]" value="<%=item.image%>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" placeholder="price" name="item[price]" value="<%=item.price%>">
        </div>
        <div class="form-group">
            <button class="form-control btn btn-primary inline">ADD</button>
        </div>
    </form>
</div>
<%- include('partials/footer'); %>